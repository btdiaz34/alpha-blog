<h1 align="center">All Alpha-Bloggers</h1>
<div align="center">
    
        <%=will_paginate%>
    </div>

        <%=@users.each do |x|%>
    
            <ul class="listing">
                <div class="row">
                    <div class="well col-md-4 col-md-offset-4">
            
                        <li align="center"><%=link_to gravatar_for(x),user_path(x) %></li>
                
                        <li class="article-title" align="center">
                        <%=link_to x.username,user_path(x)%>
                    
                        </li>
                        <li align="center"><small><%=pluralize(x.articles.count, "article") if x.articles %></small></li>
                        <% if logged_in? and current_user.admin?%>
                           <li align="center"> <%=link_to "Delete this user", user_path(x), method: :delete, 
                           data: {confirm: "Are you sure you want to delete this user and all their articles"} %> </li>
                        <%end%>
                    </div>
                </div>
            </ul>
    
        <%end%>
        
    
    <%=will_paginate%>
</div>